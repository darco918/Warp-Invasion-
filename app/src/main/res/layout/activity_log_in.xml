<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    tools:context=".LogInActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/wp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/wp_logo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/logInEditTextMarginLeft"
        android:layout_marginStart="@dimen/logInEditTextMarginLeft"
        android:background="@drawable/username_edittext"
        android:autofillHints="Username"
        android:textColor="@color/textColorLight"
        android:hint="username"
        android:shadowColor="@color/textColorLight"
        android:text="@string/username"
        android:gravity="center"
        android:textSize="25sp"
        android:inputType="text" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/logInEditTextMarginLeft"
        android:layout_marginStart="@dimen/logInEditTextMarginLeft"
        android:background="@drawable/username_edittext"
        android:autofillHints="Username"
        android:textColor="@color/textColorLight"
        android:hint="@string/password"
        android:shadowColor="@color/textColorLight"
        android:text="@string/password"
        android:gravity="center"
        android:textSize="25sp"
        android:inputType="text"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="190dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/next_button"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textSize="22sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>